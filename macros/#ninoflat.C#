#include "TFile.h"
#include "TTree.h"
#include <iostream>


void ninoflat()
{

    TFile *f = TFile::Open("NINO/1.root");
    if (f==0)
    {
	cout << "Error: cannot fine file!" << endl;
	return;
    }
    else
	cout << "File found and loaded!" << endl;

    TTree* tree = (TTree*) f->Get("H4tree");
    unsigned long long evtTime;
    unsigned int digiChannel;
    unsigned int digiGroup;
    tree->SetBranchAddress("evtTime",&evtTime);
//    tree->SetBranchAddress("digiGroup",&digiGroup);
    //tree->SetBranchAddress("digiChannel",&digiChannel);

    for (int i=0, N=tree->GetEntries(); i<N; i++)
    {
	tree->GetEntry(i);
	if (i<10)
	    cout << evtTime << endl;
	cout << N << endl;
    }
}

